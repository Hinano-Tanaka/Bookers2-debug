<% if current_user.following?(user) %>
  <%= button_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-info btn-sm btn-block mb-2", method: :delete %>
<% else %>
  <%= button_to "フォローする", user_relationships_path(user.id), class: "btn btn-info btn-sm btn-block mb-2", method: :post %>
<% end %>